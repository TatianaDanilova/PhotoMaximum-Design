<Page x:Class="Photo_Maximum.MastersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление мастерами" Width="800" Height="600" Background="#BDC3C7">
    <Page.Resources>
        <Style TargetType="Label" x:Key="Heading">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#34495E"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="6 3"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                     Background="{TemplateBinding Background}"
                     CornerRadius="2"
                     BorderBrush="#34495E"
                     BorderThickness="1"
                     Padding="8 4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#34495E"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#34495E"/>
                                <Setter Property="BorderBrush" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка "Назад" -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Content="Назад" Style="{StaticResource PrimaryButtonStyle}" Click="BackButton_Click" HorizontalAlignment="Left"/>
            <TextBlock Text="Управление мастерами" FontSize="32" FontWeight="Bold" Foreground="#34495E" HorizontalAlignment="Center" Margin="10,0"/>
        </StackPanel>

        <!-- Список мастеров -->
        <DataGrid x:Name="MastersGrid" 
                  Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  Margin="0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="Auto"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding Fio}" Width="*"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="Auto"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Форма добавления мастера -->
        <Border Grid.Row="2" Background="White" Padding="10" CornerRadius="5" Margin="0,10">
            <StackPanel>
                <TextBlock Text="Добавить нового мастера" FontSize="18" FontWeight="Bold" Foreground="#34495E" Margin="0,0,0,10"/>

                <!-- Поле ФИО -->
                <Grid>
                    <TextBox x:Name="NameBox" Margin="0,5" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" TextChanged="TextBox_TextChanged"/>
                    <TextBlock x:Name="NamePlaceholder" Text="ФИО мастера" Foreground="Gray" Margin="5,5,0,0" IsHitTestVisible="False"/>
                </Grid>

                <!-- Поле Телефон -->
                <Grid>
                    <TextBox x:Name="PhoneBox" Margin="0,5" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" TextChanged="TextBox_TextChanged" PreviewTextInput="PhoneBox_PreviewTextInput"/>
                    <TextBlock x:Name="PhonePlaceholder" Text="Телефон" Foreground="Gray" Margin="5,5,0,0" IsHitTestVisible="False"/>
                </Grid>

                <!-- Поле Логин -->
                <Grid>
                    <TextBox x:Name="LoginBox" Margin="0,5" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" TextChanged="TextBox_TextChanged"/>
                    <TextBlock x:Name="LoginPlaceholder" Text="Логин" Foreground="Gray" Margin="5,5,0,0" IsHitTestVisible="False"/>
                </Grid>

                <!-- Поле Пароль -->
                <Grid>
                    <PasswordBox x:Name="PasswordBox" Margin="0,5" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus" PasswordChanged="PasswordBox_PasswordChanged"/>
                    <TextBlock x:Name="PasswordPlaceholder" Text="Пароль" Foreground="Gray" Margin="5,5,0,0" IsHitTestVisible="False"/>
                </Grid>

                <Button Content="Добавить мастера" Style="{StaticResource PrimaryButtonStyle}" Margin="0,10" Click="AddMaster_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>