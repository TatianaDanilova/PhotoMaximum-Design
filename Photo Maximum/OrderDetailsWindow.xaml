<Window x:Class="Photo_Maximum.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали заказа" Width="400" Height="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="{Binding RequestId, StringFormat='Заказ №{0}'}" FontSize="18" FontWeight="Bold" Foreground="#34495E"/>
            <TextBlock Text="{Binding Type, StringFormat='Тип: {0}'}" FontSize="14" Foreground="#555"/>
            <TextBlock Text="{Binding Size, StringFormat='Размер: {0}'}" FontSize="14" Foreground="#555"/>
            <TextBlock Text="{Binding Status, StringFormat='Статус: {0}'}" FontSize="14" Foreground="#555"/>
            <TextBlock Text="{Binding Customer, StringFormat='Клиент: {0}'}" FontSize="14" Foreground="#555"/>
            <TextBlock Text="{Binding Executor, StringFormat='Мастер: {0}'}" FontSize="14" Foreground="#555"/>
            <TextBlock Text="{Binding Comment, StringFormat='Комментарий: {0}'}" FontSize="14" Foreground="#555"/>
            <TextBlock Text="{Binding StartDate, StringFormat='Дата начала: {0:dd.MM.yyyy}'}" FontSize="14" Foreground="#555"/>
            <TextBlock Text="{Binding EndDate, StringFormat='Дата завершения: {0:dd.MM.yyyy}'}" FontSize="14" Foreground="#555"/>
        </StackPanel>
    </Grid>
</Window>